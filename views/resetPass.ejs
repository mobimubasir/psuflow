<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= title || "Reset Password | PSUFlow" %></title>

  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <style>
    .msg { margin-top:10px; font-size:14px; }
    .msg.error { color:#e74c3c; }
    .msg.success { color:#2ecc71; }
  </style>
</head>
<body>
  <div class="container">
    <div class="reset-box">
      <div style="text-align: center; margin-bottom: 10px;">
        <img src="/assets/PSUFlow-logo.png" alt="PSUFlow Logo" width="80">
      </div>

      <h2>Reset your password</h2>

      <form id="resetForm">
        <div class="input-group">
          <i class="fas fa-lock"></i>
          <input id="oldPassword" type="password" placeholder="Old Password" required />
        </div>

        <div class="input-group">
          <i class="fas fa-lock"></i>
          <input id="newPassword" type="password" placeholder="New Password" required minlength="6" />
        </div>

        <div class="input-group">
          <i class="fas fa-lock"></i>
          <input id="confirmPassword" type="password" placeholder="Confirm New Password" required minlength="6" />
        </div>

        <button type="submit">Reset</button>
        <div id="msg" class="msg"></div>
      </form>

      <div style="margin-top:12px;">
        <a href="/login"><i class="fa fa-arrow-left"></i> Back to Login</a>
      </div>
    </div>
  </div>

  <script>
  (function(){
    const form = document.getElementById('resetForm');
    const msg  = document.getElementById('msg');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      msg.className = 'msg';
      msg.textContent = '';

      const user = JSON.parse(localStorage.getItem('user') || 'null');
      if(!user?.id){
        msg.classList.add('error');
        msg.textContent = 'Please login first.';
        return;
      }

      const oldPassword = document.getElementById('oldPassword').value;
      const newPassword = document.getElementById('newPassword').value;
      const confirm     = document.getElementById('confirmPassword').value;

      if(newPassword !== confirm){
        msg.classList.add('error');
        msg.textContent = 'New password and confirmation do not match.';
        return;
      }

      try{
        const res = await fetch('/auth/change-password', {
          method: 'POST',
          headers: { 'Content-Type':'application/json' },
          body: JSON.stringify({ userId: user.id, oldPassword, newPassword })
        });
        const data = await res.json();

        if(!res.ok){
          msg.classList.add('error');
          msg.textContent = data.error || 'Unable to reset password.';
          return;
        }

        msg.classList.add('success');
        msg.textContent = 'Password updated successfully. Redirecting to login...';

        // Log out locally and send user to login
        localStorage.removeItem('user');
        setTimeout(() => { location.href = '/login'; }, 1200);
      }catch(err){
        console.error(err);
        msg.classList.add('error');
        msg.textContent = 'Network error. Please try again.';
      }
    });
  })();
  </script>
</body>
</html>
